<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.myapplication.views.RadiusRelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"

        app:leftTopRadius="900dp"
        app:leftBottomRadius="900dp"
        app:rightTopRadius="900dp"
        app:rightBottomRadius="900dp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_test"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdasdasdsaddsadasdsa"/>

    </com.example.myapplication.views.RadiusRelativeLayout>

</android.support.constraint.ConstraintLayout>