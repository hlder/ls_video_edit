<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="lsVideoEditer">
        <attr name="leftTopIconWidth" format="dimension" />
        <attr name="leftTopIconHeight" format="dimension" />

        <attr name="leftBottomIconWidth" format="dimension" />
        <attr name="leftBottomIconHeight" format="dimension" />

        <attr name="rightTopIconWidth" format="dimension" />
        <attr name="rightTopIconHeight" format="dimension" />

        <attr name="rightBottomIconWidth" format="dimension" />
        <attr name="rightBottomIconHeight" format="dimension" />

        <!-- touch的热区范围，四个脚的角标，触点的大小,默认为50px -->
        <attr name="iconHotSize" format="dimension"/>

        <!--  touch判断是否是点击时候，down的x,y和up时xy的距离，如果在这个距离之下，则认为click，便会回调click事件,默认为10px -->
        <attr name="clickGestureSize" format="dimension"/>

        <attr name="leftTopIcon" format="reference"/>
        <attr name="leftBottomIcon" format="reference"/>
        <attr name="rightTopIcon" format="reference"/>
        <attr name="rightBottomIcon" format="reference"/>

    </declare-styleable>

    <declare-styleable name="RadiusLayout">
        <attr name="radius" format="dimension"/>
        <attr name="leftTopRadius" format="dimension"/>
        <attr name="leftBottomRadius" format="dimension"/>
        <attr name="rightTopRadius" format="dimension"/>
        <attr name="rightBottomRadius" format="dimension"/>
    </declare-styleable>
</resources>